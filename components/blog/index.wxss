/* components/blog/blog.wxss */

.blog-container {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 14rpx;
  position: relative;
}

.blog-catename {
  position: absolute;
  top: 60rpx;
  left: 0;
  padding: 10rpx 20rpx;
  border: 1px solid #95b2f7;
  border-bottom-right-radius: 14rpx;
  border-top-right-radius: 14rpx;
  font-size: 24rpx;
  color: #fff;
  background: #95b2f7;
}

.blog-img {
  width: 100%;
  height: 420rpx;
  border-radius: 8rpx;
}

.bolg-aside {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
  background: rgba(0, 0, 0, 0.2);
}

.blog-like view {
  display: flex;
}

.blog-like .border-line {
  display: block;
  width: 100%;
  height: 1px;
  border-top: 1px solid #aaa;
}

/* 从这里覆盖自定义组件的样式 */

.blog-like wxz-like text, .blog-like wxz-collect text {
  position: relative;
  top: 6rpx;
  left: 4rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  color: #bbb;
}

.blog-content {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.blog-content .content {
  width: 520rpx;
}

.content text {
  display: block;
  margin: 0 10rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
}

.content .title {
  font-size: 32rpx;
  font-weight: 600;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .desc {
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #444;
}

.content .cate-name {
  color: #95b2f7;
}

.blog-content .img {
  flex: 1;
}

.blog-content .img > image {
  width: 100%;
  height: 144rpx;
  vertical-align: top;
  border-radius: 6rpx;
  overflow: hidden;
}
